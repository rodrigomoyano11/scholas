{
  // Icons
  "material-icon-theme.activeIconPack": "angular",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.files.associations": {
    ".stylelintcache": "stylelint"
  },
  // Editor
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  // Linter
  "eslint.format.enable": true,
  // Excluded files and folders
  "files.exclude": {
    // Dependencies
    "node_modules/": false,
    "package-lock.json": false,
    "yarn.lock": false,
    // Formatter
    ".prettierrc": false,
    ".prettierignore": false,
    // Linter
    ".eslintrc": false,
    ".eslintcache": false,
    ".stylelintrc.js": false,
    ".stylelintignore": false,
    ".stylelintcache": false,
    // Tests
    "**/*test.ts": false,
    "**/*spec*": false,
    // Git
    ".gitignore": false,
    // TypeScript
    "tsconfig.app.json": false,
    // Firebase
    ".firebaserc": false,
    "firebase.json": false,
    // DevOps
    "Jenkinsfile": false,
    // Others
    "karma.conf.js": false,
    ".husky/": false,
    ".editorconfig": false,
    ".browserslistrc": false,
    "**/polyfills.ts": false
  }
}
